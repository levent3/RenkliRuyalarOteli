@model List<Musteri>
<a asp-action="Create" asp-controller="Musteri" class="btn btn-primary">Yeni Kayit</a>
<div class="card">
    <div class="card-header">
        <h3>Kullanicilar</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <td>Müsteri Id</td>
                    <td>Adi</td>
                    <td>Soyadi</td>
                    <td>Tc</td>
                    <td>Cinsiyet</td>
                    <td>Cep NO</td>
                    <td></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (Musteri musteri in Model)
                {
                    <tr>
                        <td>@musteri.Id</td>
                        <td>@musteri.Ad</td>
                        <td>@musteri.Soyadi</td>
                        <td>@musteri.MusteriTcNo</td>
                        <td>@musteri.Cinsiyet</td>
                        <td>@musteri.CepNo</td>
                        <td><a asp-action="Update" asp-controller="Musteri" class="btn btn-success" asp-route-Id="@musteri.Id">Update</a> </td>
                        <td><a asp-action="Delete" asp-controller="Musteri" class="btn btn-danger" asp-route-Id="@musteri.Id">Delete</a> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{

    <script type="text/javascript">
            $(document).ready(function () {
                $('#myTable').DataTable();
            });

    </script>
}