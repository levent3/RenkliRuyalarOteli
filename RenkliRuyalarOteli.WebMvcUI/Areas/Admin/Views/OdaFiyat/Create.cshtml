@model OdaFiyatCreateDTO

<div class="card">
    <div class="card-header">
        <h3>Oda Fiyat Ekleme</h3>
        <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="OdaFiyat" method="post" enctype="multipart/form-data">


            <div class="input-group mb-3">
                <input type="date" asp-for="Baslangic" class="form-control" placeholder="Baslangic Tarihi">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Baslangic"></span>
                    </div>
                </div>
            </div>
            <div class="input-group mb-3">
                <input type="date" asp-for="Bitis" class="form-control" placeholder="Bitis Tarihi">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope text-danger" asp-validation-for="Bitis"></span>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <input type="text" asp-for="Fiyat" class="form-control" placeholder="Fiyat">

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope text-danger" asp-validation-for="Fiyat"></span>
                        </div>
                    </div>
                </div>


                <div class="input-group mb-3 demo-example">
                    <label for="Role">Oda seç:</label>
                    <select asp-for="Odalar" asp-items=@ViewBag.Odalar multiple>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary" value="Kaydet">Kaydet</button>
        </form>
    </div>
</div>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/jquery.multi-select.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#Odalar').multiSelect();

        });
    </script>
}