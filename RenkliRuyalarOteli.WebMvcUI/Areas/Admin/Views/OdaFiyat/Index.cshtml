@model List<OdaFiyat>
<a asp-action="Create" asp-controller="OdaFiyat" class="btn btn-primary">Yeni Kayit</a>

<div class="card">
    <div class="card-header">
        <h3>Oda Fiyatları</h3>
    </div>
    <div class="card-body">
        <table class="table table-hover" id="myTable">
            <thead>
                <tr>
                    <td>Başlangıc Tarihi</td>
                    <td>Bitiş Tarihi</td>
                    <td>Oda No</td>
                    <td>Fiyat</td>
                    <td></td>
                    <td></td>

                </tr>
            </thead>
            <tbody>
                @foreach (OdaFiyat odaFiyat in Model)
                {
                        <tr>
                            <td>@odaFiyat.Baslangic</td>
                            <td>@odaFiyat.Bitis</td>
                            <td>@odaFiyat.Oda.OdaNo</td>
                            <td>@odaFiyat.Fiyat</td>
                           
                            <td><a asp-action="Update" asp-controller="OdaFiyat" class="btn btn-success" asp-route-Id="@odaFiyat.Id">Update</a> </td>
                        <td><a asp-action="Delete" asp-controller="OdaFiyat" class="btn btn-danger" asp-route-Id="@odaFiyat.Id">Delete</a> </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });

    </script>
}



