@model OdaFiyatUpdateDTO
<div class="card">
    <div class="card-header">
        <h3>@Model.OdaNo </h3>
         <div class="card-header">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Update" asp-controller="OdaFiyat" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" >
        <div class="input-group mb-3">
                    <input type="number" asp-for="Id"  class="form-control" placeholder="OdaNo">
                    <div class="input-group-append">
                        <div class="input-group-text">
                           <span class="fas fa-envelope text-danger" asp-validation-for="Baslangic"></span>
                        </div>
                    </div>
        </div>
        <div class="input-group mb-3">
                    <input type="date" asp-for="Bitis"  class="form-control" placeholder="bitis tarihi">
                    <div class="input-group-append">
                        <div class="input-group-text">
                          <span class="fas fa-envelope text-danger" asp-validation-for="Bitis"></span>
                        </div>
                    </div>
         <div class="input-group mb-3">
                      <input type="text" asp-for="Fiyat" class="form-control" placeholder="Fiyat ">
                    <div class="input-group-append">
                        <div class="input-group-text">
                             <span class="fas fa-envelope text-danger" asp-validation-for="Fiyat"></span>
                        </div>
           </div>

        <button type="submit"   class="btn btn-primary" value="Kaydet">Kaydet</button>
    </form>
   </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>